# RivaFlow Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ==============================================================================
# REQUIRED
# ==============================================================================

# Secret key for JWT signing (REQUIRED)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=your-secret-key-here-minimum-32-characters-long

# ==============================================================================
# ENVIRONMENT
# ==============================================================================

# Application environment: development, production, or test
ENV=development

# ==============================================================================
# DATABASE
# ==============================================================================

# Database connection URL (optional, defaults to SQLite at ~/.rivaflow/rivaflow.db)
# For PostgreSQL: postgresql://user:password@host:port/database
# For SQLite (default): Leave commented out or use sqlite:///path/to/db.db
# DATABASE_URL=postgresql://user:password@localhost:5432/rivaflow

# ==============================================================================
# AUTHENTICATION
# ==============================================================================

# JWT access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT refresh token expiration (days)
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==============================================================================
# EMAIL / NOTIFICATIONS
# ==============================================================================

# Option 1: SendGrid (recommended for production)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Option 2: SMTP (Gmail, etc.)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@rivaflow.com
# FROM_NAME=RivaFlow

# ==============================================================================
# APPLICATION URLs
# ==============================================================================

# Base URL for the application (used in emails, redirects)
APP_BASE_URL=http://localhost:8000

# API base URL (defaults to APP_BASE_URL)
# API_BASE_URL=http://localhost:8000

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

# Enable Grapple AI coaching features
ENABLE_GRAPPLE=true

# Enable WHOOP fitness tracker integration
ENABLE_WHOOP_INTEGRATION=false

# Enable social features (friends, likes, comments)
ENABLE_SOCIAL_FEATURES=true

# ==============================================================================
# AI / LLM INTEGRATION
# ==============================================================================

# Groq API key for LLM features
# GROQ_API_KEY=your-groq-api-key

# Together AI API key
# TOGETHER_API_KEY=your-together-api-key

# Ollama server URL (for local LLM)
OLLAMA_URL=http://localhost:11434

# ==============================================================================
# CACHING (Redis)
# ==============================================================================

# Enable caching
CACHE_ENABLED=false

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ==============================================================================
# RATE LIMITING
# ==============================================================================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute
RATE_LIMIT_PER_MINUTE=60

# Maximum requests per hour
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# FILE UPLOADS
# ==============================================================================

# Maximum upload size in megabytes
MAX_UPLOAD_SIZE_MB=10

# Upload directory (defaults to ~/.rivaflow/uploads)
# UPLOAD_DIR=/path/to/uploads

# ==============================================================================
# LOGGING
# ==============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Log file path (optional, defaults to stdout)
# LOG_FILE=/var/log/rivaflow/app.log

# ==============================================================================
# CORS
# ==============================================================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173

# ==============================================================================
# FRONTEND (Vite)
# ==============================================================================

# API URL for frontend (optional)
# VITE_API_URL=http://localhost:8000
