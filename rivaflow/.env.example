# RivaFlow Environment Configuration
# Copy this file to .env and fill in the values

# REQUIRED: Secret key for JWT token signing
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# REQUIRED (Production): PostgreSQL database URL
# Format: postgresql://user:password@host:port/database
# Note: In development, SQLite is used automatically if this is not set
DATABASE_URL=

# Optional: Allowed CORS origins (comma-separated)
# Default: http://localhost:5173,http://localhost:5174,http://localhost:5175
ALLOWED_ORIGINS=

# Optional: Ollama LLM configuration (for AI chat feature)
OLLAMA_URL=http://localhost:11434/api/chat
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=60.0
CHAT_ENABLED=true

# REQUIRED (for forgot password): Email/SMTP configuration
# Gmail example: smtp.gmail.com:587 (use App Password, not regular password)
# SendGrid example: smtp.sendgrid.net:587
# AWS SES example: email-smtp.us-east-1.amazonaws.com:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=RivaFlow

# REQUIRED (for password reset links): Application base URL
# Development: http://localhost:5173
# Production: https://rivaflow.onrender.com
APP_BASE_URL=http://localhost:5173
